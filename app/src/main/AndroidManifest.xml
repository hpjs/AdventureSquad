<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.adventuresquad">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <!-- TODO: modify theme here later to remove notification bar if necessary -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <view
            android:name=".view.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </view>
        <view
            android:name=".view.MainActivity"
            android:label="@string/title_activity_main">
        </view>
        <view android:name=".view.Register1Activity"
                  android:label="@string/register_title"
                  android:theme="@style/AppTheme.NoActionBar">
        </view>
        <view
            android:name=".view.NavigationActivity"
            android:label="@string/title_activity_navigation"
            android:theme="@style/AppTheme.NoActionBar">
        </view>
        <view
            android:name=".view.AdventureDetailActivity"
            android:label="@string/title_activity_adventure_detail"
            android:theme="@style/AppTheme.NoActionBar">
        </view>
        <view
            android:name=".view.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar">
        </view>
        <view
            android:name=".view.PlanAdventureActivity"
            android:label="@string/title_activity_plan_adventure"
            android:theme="@style/AppTheme.NoActionBar">
        </view>
        <view
            android:name=".view.AddAdventureActivity"
            android:label="@string/title_activity_add_adventure">
        </view>
        <view
            android:name=".view.SquadsActivity"
            android:label="@string/title_activity_squads">
        </view>
        <view
            android:name=".view.MyPlansActivity"
            android:label="@string/title_activity_my_trips"
            android:theme="@style/AppTheme.NoActionBar">
        </view>
        <view
            android:name=".view.PlanDetailActivity"
            android:label="@string/title_activity_plan_detail"
            android:theme="@style/AppTheme.NoActionBar">
        </view>
    </application>

</manifest>