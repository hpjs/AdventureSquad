<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.adventuresquad.view.AdventureDetailActivity"
    tools:showIn="@layout/activity_adventure_detail">

    <LinearLayout
        android:id="@+id/adventure_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/adventure_detail_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@color/colorPrimary"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/adventure_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/placeholder_text_loading"
            android:textSize="28sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/adventure_detail_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/placeholder_text_loading"/>

        <!--Google maps view-->

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
